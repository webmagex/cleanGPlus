{
  "name": "Clean Google+",
  "description": "Clean up Google+ to make it more usable.",
  "version": "1.5",

  "permissions": [
    "tabs",
    "<all_urls>"
  ],

  "options_page": "options.html",

  "content_scripts": [
    {
      "matches": ["https://plus.google.com/*"],
      "css": ["gplus.css"],
      "js": ["gplus.js"]
    }
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "manifest_version": 1
}
